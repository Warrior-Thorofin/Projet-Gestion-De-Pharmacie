<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="250" prefWidth="400" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.com.notrePharmacie.model.controller;ProduitFormController">

    <!-- TITRE -->
    <Label fx:id="titleLabel" layoutX="140" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ajouter un produit" />

    <!-- ID -->
    <Label layoutX="50" layoutY="70" text="ID :" />
    <TextField fx:id="idField" layoutX="150" layoutY="65" prefWidth="200" />

    <!-- NOM -->
    <Label layoutX="50" layoutY="110" text="Nom :" />
    <TextField fx:id="nomField" layoutX="150" layoutY="105" prefWidth="200" />

    <!-- BOUTONS -->
    <Button fx:id="annulerBtn" layoutX="150" layoutY="190" onAction="#annuler" text="Annuler" />
    <Button fx:id="sauvegarderBtn" layoutX="250" layoutY="190" onAction="#sauvgarder" style="-fx-font-weight: bold;" text="Sauvegarder" />

</AnchorPane>
