    <!-- BOUTONS -->
    <Button fx:id="annulerBtn" layoutX="122.0" layoutY="233.0" text="Annuler" />

    <Button fx:id="sauvegarderBtn" layoutX="251.0" layoutY="233.0" style="-fx-font-weight: bold;" text="Sauvegarder" />
   <Label layoutX="40.0" layoutY="192.0" text="Date de livraison:" />
