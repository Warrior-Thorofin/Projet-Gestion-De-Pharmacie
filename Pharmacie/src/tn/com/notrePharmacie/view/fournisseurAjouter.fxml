<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefWidth="400" prefHeight="280"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.FournisseurAddController">

    <Label text="Ajouter Fournisseur"
           layoutX="110" layoutY="20"
           style="-fx-font-size:18px; -fx-font-weight:bold;" />

    <Label text="Nom :" layoutX="50" layoutY="80" />
    <TextField fx:id="nomField"
               layoutX="140" layoutY="75"
               prefWidth="200"
               promptText="Nom du fournisseur"/>

    <Label text="Numéro :" layoutX="50" layoutY="120" />
    <TextField fx:id="numeroField"
               layoutX="140" layoutY="115"
               prefWidth="200"
               promptText="Numéro téléphone"/>

    <Label text="Adresse :" layoutX="50" layoutY="160" />
    <TextField fx:id="adresseField"
               layoutX="140" layoutY="155"
               prefWidth="200"
               promptText="Adresse"/>

    <Button text="Enregistrer"
            layoutX="240" layoutY="210"
            prefWidth="100"
            style="-fx-font-weight:bold;"
            onAction="#save"/>

    <Button text="Annuler"
            layoutX="130" layoutY="210"
            prefWidth="100"
            onAction="#cancel"/>

</AnchorPane>
