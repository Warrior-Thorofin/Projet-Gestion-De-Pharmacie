<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="240" prefWidth="400" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.com.notrePharmacie.controller.FournisseurDeleteController">

    <!-- TITRE -->
    <Label layoutX="110" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Supprimer Fournisseur" />

    <!-- ID / NOM FOURNISSEUR -->
    <Label layoutX="50" layoutY="80" text=" Id Fournisseur :" />

    <!-- MESSAGE CONFIRMATION -->
    <Label fx:id="confirmationLabel" layoutX="50" layoutY="120" prefHeight="18.0" prefWidth="300" style="-fx-text-fill: #a00;" text="Voulez-vous vraiment supprimer ce fournisseur ?" wrapText="true" />

    <!-- BOUTONS -->
    <Button fx:id="annulerBtn" layoutX="92.0" layoutY="180.0" onAction="#cancel" text="Annuler" />

    <Button fx:id="deleteBtn" layoutX="250.0" layoutY="180.0" onAction="#confirm" style="-fx-font-weight: bold; -fx-text-fill: red;" text="Supprimer" />
   <TextField fx:id="IdFournisseur" layoutX="150.0" layoutY="76.0" prefHeight="26.0" prefWidth="192.0" />

</AnchorPane>
