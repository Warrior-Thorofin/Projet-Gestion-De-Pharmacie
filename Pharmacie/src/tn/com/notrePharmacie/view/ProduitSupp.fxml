<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="240" prefWidth="400" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.com.notrePharmacie.model.controller;.ProduitSuppController">

    <!-- TITRE -->
    <Label layoutX="110" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Supprimer Produit" />

    <!-- ID PRODUIT -->
    <Label layoutX="50" layoutY="80" text="ID Produit :" />
    <TextField fx:id="idField" layoutX="150" layoutY="75" prefWidth="200" />

    <!-- MESSAGE CONFIRMATION -->
    <Label fx:id="confirmationLabel" layoutX="77.0" layoutY="120.0" prefHeight="18.0" prefWidth="245.0" style="-fx-text-fill: #a00;" text="Voulez-vous vraiment supprimer ce produit ?" wrapText="true" />

    <!-- BOUTONS -->
    <Button fx:id="annulerBtn" layoutX="92.0" layoutY="180.0" onAction="#annuler" text="Annuler" />

    <Button fx:id="deleteBtn" layoutX="250.0" layoutY="180.0" onAction="#Supprimer" style="-fx-font-weight: bold; -fx-text-fill: red;" text="Supprimer" />

</AnchorPane>
